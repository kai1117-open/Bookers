<h1>Books</h1>

<table>
  
  <thead>
    
    <tr>
      <th class="title">Title</th>
      <th class="body">Body</th>
      <th colspan="3"></th>
    </tr>
    
  </thead>
  
  <tbody>
    
    <% @books.each do |book| %>
      <tr>
        <td class="cell-title"><%= book.title %></td>
        <td class="cell-body"><%= book.body %></td>
        
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
    
  </tbody>
  
</table>


<h2>New Book</h2>


<% if @book.errors.any? %>
  <div class="error-explanation">
    
    <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
    
    <% @book.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    
  </div>
<% end %>



<%= form_with model: @book do |form| %>


  <div class="field">
    
    <%= form.label :title %>
    <%= form.text_field :title, class: "book_title" %>
    
  </div>



  <div class="field">
    
    <%= form.label :body %>
    <%= form.text_area :body, class: "book_body" %>
    
  </div>



  <div class="actions">
    
    <%= form.submit "Create Book"%>
    
  </div>
  
  
  
<% end %>

