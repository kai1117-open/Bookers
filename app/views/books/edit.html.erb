    <% @book.errors.full_messages.each do |message| %>
      <div class="form-error">
        <ul>
          <li>
            <%= message %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>



<h1>Editing Book</h1>
<%= form_with model: @book do |form| %>
  <div class="field">

    <%= form.label :title %>
    <%= form.text_field :title, class: "book_title" %>

  </div>



  <div class="field">

    <%= form.label :body %>
    <%= form.text_area :body, class: "book_body" %>

  </div>



  <div class="actions">

    <%= form.submit "Update Book"%>

  </div>



<% end %>

